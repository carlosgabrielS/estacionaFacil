<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:paddingTop="30dp">



    <TextView
        android:id="@+id/textview_titulo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Cadastro Movimentação"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorBlack"/>


    <TextView
        android:id="@+id/textview_placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa:"/>

    <EditText
        android:id="@+id/txt_placa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a Placa"
        android:inputType="text"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textview_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo:"/>

    <EditText
        android:id="@+id/txt_modelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o modelo"
        android:inputType="text"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textview_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Veiulo:"/>

    <Spinner
        android:id="@+id/spiner_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:text="Salvar Movimentação"
        />


</LinearLayout>